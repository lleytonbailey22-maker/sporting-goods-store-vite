import React, {useState} from 'react'

const initialProducts = [
  { id: 1, name: "Elite Baseball Bat", price: 299, desc: "Premium alloy for max performance." },
  { id: 2, name: "Pro Basketball Hoop", price: 799, desc: "Adjustable height, ultra-stable base." },
  { id: 3, name: "Advanced Pitching Machine", price: 1499, desc: "Perfect for training and teams." },
  { id: 4, name: "Golf Rangefinder X2", price: 249, desc: "Accurate yardage with AI assist." }
]

export default function App(){
  const [query, setQuery] = useState('')
  const [results, setResults] = useState(initialProducts)

  function search(e){
    e?.preventDefault()
    const q = query.trim().toLowerCase()
    if(!q){
      setResults(initialProducts)
      return
    }
    const r = initialProducts.filter(p => p.name.toLowerCase().includes(q) || p.desc.toLowerCase().includes(q))
    setResults(r)
  }

  function buyNow(p){
    alert(`Buy now clicked for: ${p.name} — This demo does not process payments. Use Stripe/Shopify for payments.`)
  }

  return (
    <div className="page">
      <header className="hero">
        <h1>Apex Sporting Goods</h1>
        <p className="tag">AI-powered gear finder — high-ticket sporting equipment, no inventory.</p>
      </header>

      <main className="container">
        <form className="searchRow" onSubmit={search}>
          <input
            className="searchInput"
            placeholder="Search for gear (e.g., baseball, pitching machine, golf)"
            value={query}
            onChange={(e)=>setQuery(e.target.value)}
          />
          <button className="btn" type="submit">Search</button>
          <button className="btn alt" type="button" onClick={() => { setQuery(''); setResults(initialProducts); }}>Reset</button>
        </form>

        <section className="grid">
          {results.length === 0 && <div className="noResults">No products found.</div>}
          {results.map(p => (
            <article key={p.id} className="card">
              <div className="imgPlaceholder">Image</div>
              <h2>{p.name}</h2>
              <p className="desc">{p.desc}</p>
              <div className="price">${p.price.toFixed(2)}</div>
              <button className="btn full" onClick={()=>buyNow(p)}>Buy Now</button>
            </article>
          ))}
        </section>

        <footer className="footer">
          <small>Demo store — connect suppliers and payments to go live.</small>
        </footer>
      </main>
    </div>
  )
}
te and deploy automatically

